<div class="login-wrapper background-color height-max">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1 class="center">ログイン</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'target-font' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: 'target-font' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit "ログイン", class: 'btn-block btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>