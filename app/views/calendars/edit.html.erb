<div class="learning-wrapper background-color height-max">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1 class="center">学習時間を追加</h1>
        <%= form_for @calendar do |f| %>
          <div class="form-group">
            <%= f.label :学習内容, class: 'target-font' %>
            <%= f.text_field :work_content, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :学習時間, class: 'target-font' %>
            <%= f.text_field :learning_time, class: 'form-control' %>
          </div>
          
          <%= f.submit "追加",class: 'btn target-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>