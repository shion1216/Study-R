<div class="calendars-target-month-wrapper background-color">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1 class="center">目標時間を追加</h1>
        <%= form_with(model: @calendar, url: {controller: 'calendars', action: 'months' }, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :学習内容, class: 'target-font' %>
              <%= f.text_field :work_content, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :平日の目標時間, class: 'target-font' %>
              <div>※半角で入力してください</div>
              <%= f.text_field :target_time_1, class: 'form-control',placeholder: '○○時間' %>
            </div>
            <div class="form-group">
              <%= f.label :土日の目標時間, class: 'target-font' %>
              <div>※半角で入力してください</div>
              <%= f.text_field :target_time_2, class: 'form-control',placeholder: '○○時間' %>
            </div>
            <div class="form-group time-select">
              <%= f.label :年月を選択, class: 'target-font' %>
              <%= f.date_select :start_time,{use_month_numbers: true, :discard_day => true} %>
            </div>
            
            <%= f.submit "追加",class: 'btn-block btn target-btn' %>
          <% end %>
      </div>
    </div>
  </div>
</div>